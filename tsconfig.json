{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["DOM", "ES2022"],
    "strict": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,                        
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "files": true,
    "swc": true,
    "experimentalResolver": true
}
}
